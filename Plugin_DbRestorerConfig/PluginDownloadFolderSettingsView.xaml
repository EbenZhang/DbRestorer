<Window x:Class="Plugin_DbRestorerConfig.PluginDownloadFolderSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Plugin_DbRestorerConfig"
             Closing="PluginDownloadFolderSettingsView_OnClosing"
             ShowInTaskbar="False"
             mc:Ignorable="d" 
             MinWidth="320"
             WindowStartupLocation="CenterOwner"
             Title="Set Plugin Download Folder Path"
             SizeToContent="WidthAndHeight"
             d:DesignWidth="300">
    <Grid Margin="20">
         <Grid.ColumnDefinitions>
             <ColumnDefinition Width="auto"></ColumnDefinition>
             <ColumnDefinition Width="*"></ColumnDefinition>
         </Grid.ColumnDefinitions>
        <TextBlock>Download from: </TextBlock>
        <TextBox Grid.Column="1" Name="txtDownloadFolder"></TextBox>
    </Grid>
</Window>
